<resources>

    <!-- Base application theme. -->
    <style name="homeLabTheme" parent="Theme.MaterialComponents">
        <!-- Logo colors -->
        <item name="color_logo_text">@color/color_logo_text_dark</item>
        <item name="color_logo_start">@color/color_logo_start</item>
        <item name="color_logo_end">@color/color_logo_end</item>
        <!-- Background colors -->
        <item name="color_background">@color/color_background_dark</item>
        <item name="color_background_alt">@color/color_background_alt_dark</item>
        <item name="color_surface">@color/color_surface_dark</item>
        <item name="color_surface_alt">@color/color_surface_alt_dark</item>
        <item name="color_rounded_rectangle">@color/color_rounded_rectangle_dark</item>
        <!-- Standard colors -->
        <item name="color_red">@color/color_red_dark</item>
        <item name="color_green">@color/color_green_dark</item>
        <item name="color_blue">@color/color_blue_dark</item>
        <!-- Other colors -->
        <item name="colorPrimary">@color/color_logo_start</item>
        <item name="colorPrimaryDark">@color/color_logo_start</item>
        <item name="colorAccent">@color/color_red_dark</item>
        <item name="color_text">@color/color_nearly_white</item>
        <item name="color_text_alt">@color/color_grey</item>
        <!-- Status bar colors -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_status_bar_dark</item>
    </style>

    <!-- No action bar -->
    <style name="homeLabTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Home Fragment -->
    <style name="homeLabTheme.HomeFragment">
    </style>

    <!-- Dashboard Fragment -->
    <style name="homeLabTheme.DashboardFragment">
        <item name="color_temp_in">?attr/color_surface</item>
        <item name="color_temp_out">?attr/color_surface_alt</item>
    </style>

    <!-- Status Fragment -->
    <style name="homeLabTheme.StatusFragment">
        <item name="color_background_alt">?attr/color_background</item>
    </style>

    <!-- Splash screen -->
    <style name="homeLabTheme.SplashScreen">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?attr/color_logo_end</item>
    </style>

    <!-- Buttons -->
    <style name="homeLabTheme.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?attr/color_green</item>
    </style>

    <style name="homeLabTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">?attr/color_green</item>
    </style>

    <style name="homeLabTheme.SwitchButton">
        <item name="colorAccent">?attr/color_green</item>
    </style>

    <!-- BottomNavigationView -->
    <style name="homeLabTheme.BottomNavigationView">
        <item name="colorPrimary">?attr/color_green</item>
    </style>

    <style name="homeLabTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="homeLabTheme..PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
